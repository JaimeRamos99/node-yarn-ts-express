{
    "name": "node-yarn-ts-express",
    "version": "1.0.0",
    "main": "src/index.ts",
    "repository": "https://github.com/JaimeRamos99/node-yarn-ts-express.git",
    "author": "JaimeRamos99",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start:prod": "NODE_ENV=production node ./bin/index.js",
        "start:dev": "NODE_ENV=development nodemon --watch './**/*.ts' --exec 'ts-node' ./src/index.ts",
        "eslint:lint": "eslint 'src/**/*.{js,ts}' --quiet --fix",
        "prettier:fix": "prettier --write .",
        "prettier:check": "prettier --check .",
        "prepare": "husky install",
        "check-ts": "yarn tsc",
        "pre-commit-lint": "yarn check-ts && yarn lint-staged",
        "test": "NODE_ENV=test jest"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@types/express": "^4.17.12",
        "@types/node": "^15.12.4",
        "@types/pino": "^6.3.9",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "pino": "^6.11.3"
    }
}
