{
    "name": "node-yarn-ts-express",
    "version": "1.0.0",
    "main": "src/index.ts",
    "repository": "https://github.com/JaimeRamos99/node-yarn-ts-express.git",
    "author": "JaimeRamos99",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "prod": "node ./bin/index.js",
        "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' ./src/index.ts",
        "eslint:lint": "eslint 'src/**/*.{js,ts}' --quiet --fix",
        "prettier:fix": "prettier --write .",
        "prettier:check": "prettier --check .",
        "prepare": "husky install",
        "check-ts": "yarn tsc",
        "pre-commit-lint": "yarn check-ts && yarn lint-staged",
        "test": "jest",
        "test:coverage": "jest-coverage",
        "test-watch": "jest-watch"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@types/express": "^4.17.12",
        "@types/jest": "^27.0.3",
        "@types/node": "^15.12.4",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "jest": "^27.4.0",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "swagger-ui-express": "^4.1.6"
    }
}
